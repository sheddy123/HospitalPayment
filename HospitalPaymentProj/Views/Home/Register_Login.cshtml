@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
    $(document).ready(function () {

        var current_fs, next_fs, previous_fs; //fieldsets
        var opacity;
        
        if ('@TempData["Error"]' == "Please input correct username or password") {
            $("#field2").css("display", "block");
            $("#field1").css("display", "none");
        }
        $("#sectionFour").click(function () {
            $("#groupBuildingModal").modal('show');
        });
        $("#btnReg").click(function () {
            var check = $("#registerUser").validate().element(this);
            if (check == true) {
                $("#registerUser").trigger("submit")
            }
        });
        $("#btnLogin").click(function () {
            var _userName = $("#txtUserNameLogin").val();
            var _password = $("#txtPasswordLogin").val();
            var viewData = { UserName: _userName, Password: _password};
            console.log(viewData);
            if (_userName == "" || _password == "") {
                if (_userName == "") {
                    $("#errorUser1").html("Please input username");
                    $("#errorUser1").css("color", "red");
                } else {
                    $("#errorUser1").html('');
                }
                if (_password == "") {
                    $("#errorPass1").html("Please input Password");
                    $("#errorPass1").css("color", "red");
                } else {
                    $("#errorPass1").html('');
                }

            } else {
                $("#errorPass1").html('');
                $("#errorUser1").html('');
                $("#registerUser").trigger("submit")
            }
        })
        $(".next").click(function () {
            var tracks = false;
            $("#loginUser").css("display", "block");
                current_fs = $(this).parent();
                next_fs = $(this).parent().next();
                $("#progressbar li").eq($("fieldset").index(next_fs)).addClass("active");
                $("#progressbar li").eq($("fieldset").index(next_fs)).addClass("labelActive");

                //show the next fieldset
                next_fs.show();


                //hide the current fieldset with style
                current_fs.animate({ opacity: 0 }, {
                    step: function (now) {
                        // for making fielset appear animation
                        opacity = 1 - now;

                        current_fs.css({
                            'display': 'none',
                            'position': 'relative'
                        });
                        next_fs.css({ 'opacity': opacity });
                    },
                    duration: 600
                });

        });
        $(".previous").click(function () {

            current_fs = $(this).parent();
            previous_fs = $(this).parent().prev();
            $("#progressbar li").eq($("fieldset").index(current_fs)).removeClass("active");
            $("#progressbar li").eq($("fieldset").index(current_fs)).removeClass("labelActive");


            //show the previous fieldset
            previous_fs.show();

            //hide the current fieldset with style
            current_fs.animate({ opacity: 0 }, {
                step: function (now) {
                    // for making fielset appear animation
                    opacity = 1 - now;

                    current_fs.css({
                        'display': 'none',
                        'position': 'relative'
                    });
                    previous_fs.css({ 'opacity': opacity });
                },
                duration: 600
            });
        });


        $(".submit").click(function () {
            return false;
        })

        var baseUrl = "@Url.Content("~/")";

    });
    </script>

